#:kivy 2.1.0
<MainMenu>:
    BoxLayout:
        orientation: "vertical"
        Label: 
            text: "Rock Paeper Scissors Game V.1.0.0 Limited edition Free Punjabi Virus 2022"
        AnchorLayout:
            StackLayout:
                orientation: "tb-lr"
                padding: ("440dp","0dp","50dp","0dp")
                spacing: ("40dp", "40dp")
                Button:
                    text: "Play"
                    size_hint: .5,.20
                    pos_hint: {"center_x": .5}
                    on_press: root.manager.current = 'game'
                Button:
                    text: "Settings"
                    size_hint: .5,.20
                    pos_hint: {"center_x": .5}
                    on_press: root.manager.current = 'settings'
                Button:
                    text: "Exit"
                    size_hint: .5,.20
                    pos_hint: {"center_x": .5}
                    on_press: root.quitGame()


<Game>:
    Label:
        id:transfer
        text: root.message
    BoxLayout:
        orientation: "horizontal"
        canvas.after:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        BoxLayout:
            orientation: "vertical"
            Image:
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                source: root.playerSideImage
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1.5
            StackLayout:
                orientation: "lr-tb" 
                padding: ("40dp", "80dp","5dp", "20dp")
                spacing: ("15dp", "15dp") 
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                Button:
                    text: "Rock"
                    size_hint: .30,.25
                    on_press: root.rock()
                    disabled: root.confirmed
                Button:
                    text: "Paper"
                    size_hint: .30,.25
                    on_press: root.paper()
                    disabled: root.confirmed
                Button:
                    text: "Scissors"
                    size_hint: .30,.25
                    on_press: root.scissors()
                    disabled: root.confirmed
            StackLayout:
                orientation: "lr-tb" 
                padding: ("5dp", "5dp","5dp", "5dp")
                spacing: ("15dp", "15dp") 
                size_hint: 1.1, .5
                Button:
                    text: "Confirm"
                    size_hint: 0.9,0.75
                    on_press: root.confirm()
        BoxLayout:
            orientation: "vertical"
            Image:
                source: root.opponentImage
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                allow_stretch: True
                keep_ratio: False
                flipped: True
            Image: 
                source: root.opponentCharacterImage
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                allow_stretch: True
                keep_ratio: False
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10
<Settings>:
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 45
            text: "Settings"
        Label:
            font_size: 25
            text: "Volume:" 
        BoxLayout:
            orientation: "horizontal"
            Slider:
                orientation: "horizontal"
                id: volume_slider
                min: 0
                max: 1
                value: 1
                on_value: root.on_slider_value(self)
                size_hint: 2, 1
                pos_hint: {"center_x": 1}
                valign: 'middle'
            Label:
                font_size: 20
                text: str(int(volume_slider.value*100))
        BoxLayout:
            orientation: "horizontal"
            Label:
                font_size: 20
                text: "Eddie mode:(In development)"
            Switch:
                on_active: root.on_switch_active(self)
                size_hint: 1, 1
                width: "100dp"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10

<Result>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Result Screen"
        Label:
            id: result_label
            text: root.result_text