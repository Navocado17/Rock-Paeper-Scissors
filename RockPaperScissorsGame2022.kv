#:kivy 2.1.0
<MainMenu>:
    BoxLayout:
        orientation: "vertical"
        Label: 
            text: "Rock Paeper Scissors Game 2022"
        Button:
            text: "Play"
            size_hint: .5,.25
            pos_hint: {"center_x": .5}
            on_press: root.manager.current = 'game'
        Button:
            text: "Settings"
            size_hint: .5,.25
            pos_hint: {"center_x": .5}
            on_press: root.manager.current = 'settings'
        Button:
            text: "Exit"
            size_hint: .5,.25
            pos_hint: {"center_x": .5}
            on_press: root.quitGame()

<Game>:
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            Image:
                source: root.playerSideImage
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1.7
            StackLayout:
                orientation: "lr-tb" 
                padding: ("40dp", "80dp","5dp", "20dp")
                spacing: ("15dp", "15dp") 
                Button:
                    text: "Rock"
                    size_hint: .30,.25
                    on_press: root.rock()
                Button:
                    text: "Paper"
                    size_hint: .30,.25
                    on_press: root.paper()
                Button:
                    text: "Scissors"
                    size_hint: .30,.25
                    on_press: root.scissors()
            StackLayout:
                orientation: "lr-tb" 
                padding: ("5dp", "5dp","5dp", "5dp")
                spacing: ("15dp", "15dp") 
                size_hint: 1.1, .5
                Button:
                    text: "Confirm"
                    size_hint: 0.9,0.75
        BoxLayout:
            orientation: "vertical"
            Image:
                source: "assets/rock_FLIPPED.jpg"
                allow_stretch: True
                keep_ratio: False
                flipped: True
            Image: 
                source: "assets/opponent.jpg"
                allow_stretch: True
                keep_ratio: False
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10
<Settings>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Settings"
        Slider:
            min: 0
            max: 1
            value: 1
            on_value: root.on_slider_value(self)
            orientation: "horizontal"
            size_hint: .75, 1
            pos_hint: {"center_x": .5}
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10