#:kivy 2.1.0
<MainMenu>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Rectangle: 
                pos: self.pos
                size: self.size
                source: 'assets/background1.png'
        Label:
            font_name: 'assets/maintitleblack.otf'
            font_size: 40
            text: "Rock Paeper Scissors Game V.1.0.0 Limited edition Free 2022"
            outline_width: 3
            outline_color: [0,0,0,1]
        AnchorLayout:
            StackLayout:
                orientation: "tb-lr"
                padding: ("440dp","0dp","50dp","0dp")
                spacing: ("40dp", "40dp")
                Button:
                    font_name: 'assets/minecraft_font.ttf'
                    text: "Play"
                    size_hint: .5,.20
                    pos_hint: {"center_x": .5}
                    on_press: root.manager.current = 'game'
                Button:
                    font_name: 'assets/minecraft_font.ttf'
                    text: "Settings"
                    size_hint: .5,.20
                    pos_hint: {"center_x": .5}
                    on_press: root.manager.current = 'settings'
                Button:
                    font_name: 'assets/minecraft_font.ttf'
                    text: "Exit"
                    size_hint: .5,.20
                    pos_hint: {"center_x": .5}
                    on_press: root.quitGame()

<Game>:
    BoxLayout:
        orientation: "horizontal"
        canvas.after:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        BoxLayout:
            orientation: "vertical"
            Image:
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                source: root.playerSideImage
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1.5
            StackLayout:
                orientation: "lr-tb" 
                padding: ("45dp", "80dp","5dp", "20dp")
                spacing: ("15dp", "15dp") 
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle: 
                        pos: self.pos
                        size: self.size
                        source: 'assets/controller.png'
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                Button:
                    text: "Rock"
                    size_hint: .30,.25
                    on_press: root.rock()
                    disabled: root.confirmed
                Button:
                    text: "Paper"
                    size_hint: .30,.25
                    on_press: root.paper()
                    disabled: root.confirmed
                Button:
                    text: "Scissors"
                    size_hint: .30,.25
                    on_press: root.scissors()
                    disabled: root.confirmed
            StackLayout:
                orientation: "lr-tb" 
                padding: ("30dp", "5dp","5dp", "5dp")
                spacing: ("15dp", "15dp") 
                #size_hint: 1.1, .5
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'assets/controller1.png'
                Button:
                    text: "Confirm"
                    size_hint: 0.85,0.65
                    on_press: root.confirm()
        BoxLayout:
            orientation: "vertical"
            Image:
                source: root.opponentImage
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                allow_stretch: True
                keep_ratio: False
                flipped: True
            Image: 
                source: root.opponentCharacterImage
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                allow_stretch: True
                keep_ratio: False
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10
<Settings>:
    Image:
        canvas:
            Rectangle: 
                pos: self.pos
                size: self.size
                source: 'assets/settings.png'
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 45
            text: "Settings"
        Label:
            font_size: 25
            text: "Volume:" 
        BoxLayout:
            orientation: "horizontal"
            Slider:
                orientation: "horizontal"
                id: volume_slider
                min: 0
                max: 1
                value: 1
                on_value: root.on_slider_value(self)
                size_hint: 2, 1
                padding: 50
                pos_hint: {"center_x": 1}
            Label:
                font_size: 20
                text: str(int(volume_slider.value*100))
        BoxLayout:
            orientation: "horizontal"
            Label:
                font_size: 20
                text: "Eddie mode:(In development)"
            Switch:
                on_active: root.on_switch_active(self)
                size_hint: 1, 1
                width: "100dp"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10

<Result>:
    BoxLayout:
        orientation:"vertical"
        Label:
            text: "The Result"
        BoxLayout:
            orientation:"horizontal"
            Label:
                id: result_label
                text: root.result_text
            Image:
                source: root.image
                allow_stretch: True
                keep_ratio: False
        Button:
            anchor_x: "center"
            text: "Continue"
            on_press: root.returnToGame()