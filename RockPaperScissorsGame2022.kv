#:kivy 2.1.0
#:import hex kivy.utils.get_color_from_hex
<MainMenu>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Rectangle: 
                pos: self.pos
                size: self.size
                source: 'assets/background1.png'
        Label:
            font_name: 'assets/maintitleblack.otf'
            font_size: 40
            text: "Rock Paeper Scissors Game V.1.0.0 Limited edition Free 2022"
            outline_width: 3
            outline_color: [0,0,0,1]
        AnchorLayout:
            StackLayout:
                orientation: "tb-lr"
                padding: ("557dp","-50dp","50dp","50dp")
                spacing: ("55dp", "55dp")
                Button:
                    font_name: 'assets/minecraft_font.ttf'
                    text: "Play"
                    size_hint: .6,.25
                    pos_hint: {"center_x": .5}
                    on_press: root.manager.current = 'game'
                Button:
                    font_name: 'assets/minecraft_font.ttf'
                    text: "Settings"
                    size_hint: .6,.25
                    pos_hint: {"center_x": .5}
                    on_press: root.manager.current = 'settings'
                Button:
                    font_name: 'assets/minecraft_font.ttf'
                    text: "Exit"
                    size_hint: .6,.25
                    pos_hint: {"center_x": .5}
                    on_press: root.quitGame()

<Game>:
    BoxLayout:
        orientation: "horizontal"
        canvas.after:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        BoxLayout:
            orientation: "vertical"
            Image:
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                source: root.playerSideImage
                allow_stretch: True
                keep_ratio: False
            BoxLayout:
                orientation: "vertical"
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle: 
                        pos: self.pos
                        size: self.size
                        source: 'assets/controller1.png'
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                StackLayout:
                    orientation: "lr-tb" 
                    padding: ("70dp", "100dp","5dp", "20dp")
                    spacing: ("20dp", "20dp") 
                    Button:
                        text: "Rock"
                        size_hint: .30,.25
                        on_press: root.rock()
                        background_normal: ""
                        background_color: 0.72,0.11,0.13,1
                        disabled: root.confirmed
                    Button:
                        text: "Paper"
                        size_hint: .30,.25
                        on_press: root.paper()
                        disabled: root.confirmed
                        background_normal: ""
                        background_color: 0.72,0.11,0.13,1
                    Button:
                        text: "Scissors"
                        size_hint: .30,.25
                        on_press: root.scissors()
                        disabled: root.confirmed
                        background_normal: ""
                        background_color: 0.72,0.11,0.13,1
                StackLayout:
                    orientation: "lr-tb" 
                    padding: ("123dp", "5dp","5dp", "1dp")
                    spacing: ("15dp", "15dp") 
                    size_hint: 1.1, .5
                    Button:
                        text: "Confirm"
                        size_hint: 0.75,0.55
                        on_press: root.confirm()
                        #background_color: 1,0.11,0.13,1
        BoxLayout:
            orientation: "vertical"
            Image:
                source: root.opponentImage
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                allow_stretch: True
                keep_ratio: False
                flipped: True
            Image: 
                source: root.opponentCharacterImage
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                allow_stretch: True
                keep_ratio: False
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10
<Settings>:
    Image:
        canvas:
            Rectangle: 
                pos: self.pos
                size: self.size
                source: 'assets/settings.png'
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 45
            text: "Settings"
        Label:
            font_size: 25
            text: "Volume:" 
        BoxLayout:
            orientation: "horizontal"
            Slider:
                orientation: "horizontal"
                id: volume_slider
                min: 0
                max: 1
                value: 1
                on_value: root.on_slider_value(self)
                size_hint: 2, 1
                padding: 50
                pos_hint: {"center_x": 1}
            Label:
                font_size: 20
                text: str(int(volume_slider.value*100))
        BoxLayout:
            orientation: "horizontal"
            Label:
                font_size: 20
                text: "Eddie mode:(In development)"
            Switch:
                on_active: root.on_switch_active(self)
                size_hint: 1, 1
                width: "100dp"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10

<Result>:
    BoxLayout:
        orientation:"vertical"
        Label:
            text: "The Result"
        BoxLayout:
            orientation:"horizontal"
            Label:
                id: result_label
                text: root.result_text
            Image:
                source: root.image
                allow_stretch: True
                keep_ratio: False
        Button:
            anchor_x: "center"
            text: "Continue"
            on_press: root.returnToGame()