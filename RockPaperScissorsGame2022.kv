#:kivy 2.1.0
<MainMenu>:
    BoxLayout:
        orientation: "vertical"
        Label: 
            text: "Rock Paeper Scissors Game 2022"
        Button:
            text: "Play"
            size_hint: .5,.25
            pos_hint: {"center_x": .5}
            on_press: root.manager.current = 'game'
        Button:
            text: "Settings"
            size_hint: .5,.25
            pos_hint: {"center_x": .5}
            on_press: root.manager.current = 'settings'
        Button:
            text: "Exit"
            size_hint: .5,.25
            pos_hint: {"center_x": .5}
            on_press: root.quitGame()

<Game>:
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Player Side"
        Label:
            text: "Opponent Side"
    StackLayout:
        orientation: "lr-tb" 
        padding: ("20dp", "20dp","20dp", "20dp")
        spacing: ("15dp", "15dp") 
            Button:
                text: "Rock"
                size_hint: .25,.25
            Button:
                text: "Paper"
                size_hint: .25,.25
            Button:
                text: "Scissors"
                size_hint: .25,.25
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10
<Settings>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Settings"
        Slider:
            min: 0
            max: 1
            value: 1
            on_value: root.on_slider_value(self)
            orientation: "horizontal"
            size_hint: .75, 1
            pos_hint: {"center_x": .5}
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button: 
            text: "Back"
            on_press: root.manager.current = 'menu'
            size_hint: .10, .10